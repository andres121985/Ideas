<h1>Welcome!</h1>
<form action="/users" method="POST">
    <fieldset>
    <legend><h1>Register</h1></legend>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" name="user[name]" placeholder="Name"><br><br>
    <input type="text" name="user[alias]" placeholder="Alias"><br><br>
    <input type="text" name="user[email]" placeholder="Email"><br><br>
    <input type="password" name="user[password]" placeholder="Password"><br><br>
    <input type="password" name="user[password_confirmation]" placeholder="Confirm Password"><br><br>
    <input type="submit" value="Register"><br><br>
</fieldset>
</form><br><br>

<form action="/login" method="POST">
<fieldset>
<legend><h1>Login</h1></legend>

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" name="user[email]" placeholder="Email"><br><br>
    <input type="password" name="user[password]" placeholder="Password"><br><br>
    <input type="submit" value="Login">
</fieldset>
</form>
